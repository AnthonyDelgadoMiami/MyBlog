
<div class="container">
  <div class="row justify-content-center">
    <div class="col-8 mt-4">
      <div class="card text-center shadow mb-5">
        <div class="card-header font-italic">
          by <%= @post.user.username if @post.user %>
          <%= link_to gravatar_for(@post.user), user_path(@post.user) if @post.user %>
        </div>
        <div class="card-body">
          <div class="card-text text-left"><%= simple_format(@post.content) %></div>
          <% if logged_in? && @post.user == current_user %>
            <%= link_to "Edit", edit_post_path(@post), class: "btn btn-outline-info" %>
            <%= link_to "Delete", post_path(@post), method: :delete,
                        data: {confirm: "Are you sure?"}, class: "btn btn-outline-danger" %>
          <% end %>
        </div>
        <div class="card-footer text-muted">
          <small>Created <%= time_ago_in_words(@post.created_at) %> ago,
          edited <%= time_ago_in_words(@post.updated_at) %> ago</small>
        </div>
      </div>
    </div>
  </div>
</div>

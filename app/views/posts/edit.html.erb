
<div class="container">
  <div class="row justify-content-center">
    <div class="col-10">
      <%= render 'shared/errors', obj: @post %>
      <div class="card mt-4 shadow mb-5">
        <div class="card-header text-center">
          <h1 class="text-light">Edit Post</h1>
        </div>
        <div class="card-body">
          <%= form_with(model: @post, class: "shadow p-3 mb-3 bg-info rounded", local: true) do |form| %>
            <div class="form-group row">
              <%= form.label :content, class: "col-2 col-form-label text-light" %>
              <div class="col-10">
                <%= form.text_area :content, rows: 10, class: "form-control shadow rounded", placeholder: "What's on your mind?" %>
              </div>
            </div>
            <div class="form-group row justify-content-center">
              <%= form.submit "Update Post", class: "btn btn-outline-light btn-lg" %>
            </div>
          <% end %>
        </div>
        <div class="card-footer text-center">
          <%= link_to '[ Cancel and return to posts listing ]', root_path, class: "text-info" %>
        </div>
      </div>
    </div>
  </div>
</div>

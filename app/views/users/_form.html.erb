<%= form_with(model: user, :id => 'user-workSaved') do |form| %>
  <% if user.errors.any? %>
    <div style="color: red" class= "container">
      <h2 class=""><%= pluralize(user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
        <% user.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
<div class = "container">
  <div class = "col"
    <div class= "col">
      <%= form.label :name, style: "display: block" %>
      <%= form.text_field :name %>
    </div>

    <div class= "row">
      <%= form.label :email, style: "display: block" %>
    </div>
    <div class= "row-6">    
      <%= form.text_field :email %>
    </div>

    <div class= "row">
      <%= form.label :username, style: "display: block" %>
    </div>
    <div class= "row-6">    
      <%= form.text_field :username %>
    </div>

  <div class="form-group row">
    <%= form.label :password, class: "col-2 col-form-label text-light" %>
    <div class="col-10">
      <%= form.password_field :password, class: "form-control shadow rounded", placeholder: "Choose a password" %>
    </div>
  </div>

  <div class="submit">
    <%= form.submit :Submit, class: 'btn btn-success'  %>
  </div>
</div>
<% end %>
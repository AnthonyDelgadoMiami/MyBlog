
<% content_for :title do %>
  Sign up
<% end %>

<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <div class="card">
        <div class="card-header">
          <h3 class="text-center">Sign up for an account</h3>
        </div>
        <div class="card-body">
          <%= render 'shared/errors', obj: @user %>
          
          <%= form_with(model: @user, local: true) do |f| %>
            <div class="form-group mb-3">
              <%= f.label :name, class: "form-label" %>
              <%= f.text_field :name, class: "form-control", placeholder: "Enter your full name" %>
            </div>
            
            <div class="form-group mb-3">
              <%= f.label :username, class: "form-label" %>
              <%= f.text_field :username, class: "form-control", placeholder: "Choose a username" %>
            </div>
            
            <div class="form-group mb-3">
              <%= f.label :email, class: "form-label" %>
              <%= f.email_field :email, class: "form-control", placeholder: "Enter your email" %>
            </div>
            
            <div class="form-group mb-3">
              <%= f.label :password, class: "form-label" %>
              <%= f.password_field :password, class: "form-control", placeholder: "Choose a password" %>
            </div>
            
            <div class="form-group mb-3">
              <%= f.label :password_confirmation, class: "form-label" %>
              <%= f.password_field :password_confirmation, class: "form-control", placeholder: "Confirm your password" %>
            </div>
            
            <div class="form-group mb-3">
              <%= f.submit "Sign up", class: "btn btn-success w-100" %>
            </div>
          <% end %>
          
          <div class="text-center">
            <p>Already have an account? <%= link_to "Log in here", login_path %></p>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

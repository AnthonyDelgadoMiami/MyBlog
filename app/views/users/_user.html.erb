<div id="<%= dom_id user %>">
  <p>
    <strong>ID:</strong>
    <%= user.id %>
  </p>
  
  <p>
    <strong>Name:</strong>
    <%= user.name %>
  </p>

  <p>
    <strong>Email:</strong>
    <%= user.email %>
  </p>
  <p>
    <strong>Location:</strong>
    <%= user.location.name %>
